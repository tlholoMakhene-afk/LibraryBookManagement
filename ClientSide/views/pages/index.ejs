<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main>
    <div class="jumbotron">
        <h1>Here are the books currently in our library</h1>
        <p>This might defer depending on your location.</p>
        <div class="col-md-10">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Available Books</h3>
              </div>
              <div class="panel-body">
                <table class="table table-striped table-hover">
                  <thead>
                   <tr>
                      <th>Title</th>
                      <th>Author</th>
                      <th>Date Published</th>
                      <th>Category</th>
                      <th>Manage</th>
                    </tr>  
                  </thead>
                  <tbody>
                    <% if(Length > 0){ %>
                    <% Books.forEach((item) => { %>
                        <tr>
                        <td><%= item.title %></td>
                        <td><%= item.author %></td>
                        <td><%= item.year %></td>
                        <td><%= item.category %></td>
                        <td><a href="/patch/<%= item._id %>"class="btn btn-info"><i class="fa fa-pencil-alt"></i></a><a href="/delete/<%= item._id %>" class="btn btn-warning"><i class="fa fa-trash"></i></a></td>
                        </tr>
                        <% }) %>
                        <% } else{ %>  
                            <p>No books available</p>
                        <% } %>
                  </tbody>
                </table>
              </div>
            </div>
           </div>
    </div>
</main>

<footer>
    <%- include('../partials/footer'); %>
</footer>

</body>
</html>